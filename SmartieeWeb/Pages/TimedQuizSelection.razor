@page "/timed/{CategoryId:int}/{Difficulty}"

@inject NavigationManager NavigationManager

<h2>Do you want the quiz to be timed?</h2>

<button class="custom-btn" @onclick="() => StartQuiz(true)">Yes</button>
<button class="custom-btn" @onclick="() => StartQuiz(false)">No</button>

@code {
    [Parameter]
    public int CategoryId { get; set; }

    [Parameter]
    public string Difficulty { get; set; }

    // Starts the quiz with the specified timing option (timed or untimed)
    // and navigates to the quiz component with the selected settings.
    private void StartQuiz(bool isTimed)
    {
        NavigationManager.NavigateTo($"/quiz/{CategoryId}/{Difficulty}/{isTimed}");
    }
}
